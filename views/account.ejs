<%- include('partials/styleOnlyHeader'); %>


<div class="d-flex justify-content-between p-3 nav">
    <a href="/channels" class="text-body h2">Waffle</a>
    <div>
      <a href="/account" class="text-body h2 mr-3">Account</a>
      <a href="/channels" class="text-body h2">Channels</a>
    </div>
</div>

<div class="d-flex h-100 justify-content-center pt-5">
    <div class="d-flex bgso p-4">
        <form class="d-flex flex-column w-50" action="/account" method="post" enctype="multipart/form-data">
            <% if (locals.errors && locals.errors.profile) { %>
                <% locals.errors.profile.forEach(function(error) { %>
                    <p class="alert alert-danger" role="alert"><%= error %></p>
                <% }) %>
            <% } %>
            <h3 class="mt-3">Display Name</h3>
            <% var userName = ("displayName" in  locals.user) ? locals.user.displayName : false; %>
            <input id="txtFirst" name="displayName" type="text" value="<%= userName %>">
            <h3 class="mt-3">E-mail</h3>
            <% var email = ("displayName" in  locals.user) ? locals.user.email : false; %>
            <input type="email" name="email"  value="<%= email %>">
            <h3 class="mt-3">Profile Picture</h3>
            <input type="file" name="avatar">
            <button id="updateProfile" type="submit" class="mt-4">Save</button>
        </form>

        <form class="d-flex flex-column w-50 ml-2" action="/password" method="post">
            <% if (locals.errors && locals.errors.password) { %>
                <% locals.errors.password.forEach(function(error) { %>
                    <p class="alert alert-danger" role="alert"><%= error %></p>
                <% }) %>
            <% } %>
            <h3 class="mt-3">New Password</h3>
            <% var email = ("displayName" in  locals.user) ? locals.user.newPassword : false; %>
            <input type="password" name="password" placeholder="Password">
            <h3 class="mt-3">Confrm Password</h3>
            <% var email = ("displayName" in  locals.user) ? locals.user.confirmPassword : false; %>
            <input type="password" name="passwordConfirm" placeholder="Confirm Password">

            <button id="updatePassword" type="submit" class="mt-4">Save</button>

        </form>
    </div>
</div>

<%- include('partials/footer'); %>
